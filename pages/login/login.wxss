page {
  color: #fff;
}
.wrapper {
  min-height: 100vh;
  padding: 0 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.logo {
  text-align: center;
  padding: 40rpx 0;
}
.logo image {
  width: 94rpx;
  height: 94rpx;
}
.form view {
  border-radius: 4rpx;
  background: #fff;
}
.form input {
  width: 100%;
  padding-left: 30rpx;
  color: #000;
  box-sizing: border-box;
  height: 100rpx;
  border-radius: 4rpx;
  border-bottom: 1rpx solid #efefef;
}

.form input:last-child {
  border-bottom: none;
}

.login {
  width: 100%;
  margin-top: 20rpx;
  color: #fff;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-radius: 4rpx;
  background: rgba(0, 0, 0, .5);
}

.security-hint {
  margin-top: 20rpx;
  font-size: 22rpx;
  color: #eee;
}

.footer {
  height: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  color: #fff;
}